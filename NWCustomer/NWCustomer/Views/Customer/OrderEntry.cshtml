@{
    ViewBag.Title = "New Order Entry";
}

<div class="wrapper">

    <nav id="sidebar">
        <!-- Sidebar Header -->
        <div class="sidebar-header">
            <h3>Wasatch Solutions</h3>
        </div>

        <!-- Sidebar Links -->
        <ul class="list-unstyled components">
            <li class="active"><a href="#">Home</a></li>
            <li>
                <!-- Link with dropdown items -->
                <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false">Tests</a>
                <ul class="collapse list-unstyled" id="homeSubmenu">
                    <li><a href="#">394869-1</a></li>
                    <li><a href="#">348576-4</a></li>
                    <li><a href="#">348759-2</a></li>
                </ul>
            <li><a href="@Url.Action("WorkOrders", "Customer")">Work Orders</a></li>
            <li><a href="#">Account</a></li>
            <li><a href="#">Support</a></li>
        </ul>
    </nav>

    <div class="container-fluid dashboard-wrapper">
        <div class="container-fluid dashboard-container">
            @using (Html.BeginForm("OrderEntry", "Customer", FormMethod.Post, new { @class = "form-group" }))
            {
                @Html.AntiForgeryToken()
                <label for="firstName" class="sr-only">First Name</label>
                @Html.TextBox("Compound", "", new { type = "text", id = "compound", @class = "form-control", placeholder = "Type compound name here", required = true, autofocus = true })
                <br />
                <label for="option1" type="checkbox">Biochemical Pharmacology</label>
                @Html.CheckBox("option1", false, new { @class = "checkbox", id = "option1" })
                <label for="option2" type="checkbox">DiscoveryScreen</label>
                @Html.CheckBox("option2", false, new { @class = "checkbox" })
                <label for="option3" type="checkbox">ImmunoScreen</label>
                @Html.CheckBox("option3", false, new { @class = "checkbox" })
                <label for="option4" type="checkbox">ProfilingScreen</label>
                @Html.CheckBox("option4", false, new { @class = "checkbox" })
                <label for="option5" type="checkbox">PharmaScreen</label>
                @Html.CheckBox("option5", false, new { @class = "checkbox" })
                <label for="option6" type="checkbox">CustomScreen</label>
                @Html.CheckBox("option6", false, new { @class = "checkbox" })
                <br />
                <br />
                <label for="option7" type="checkbox">Spot Analysis</label>
                @Html.CheckBox("option7", false, new { @class = "checkbox", id = "option1" })
                <label for="option8" type="checkbox">Salicylate Testing</label>
                @Html.CheckBox("option8", false, new { @class = "checkbox" })
                <label for="option9" type="checkbox">Permangenate Index</label>
                @Html.CheckBox("option9", false, new { @class = "checkbox" })
                <button class="btn btn-lg btn-primary" type="submit">Submit</button>
            }
        </div>
    </div>
</div>

