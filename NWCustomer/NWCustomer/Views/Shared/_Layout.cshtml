<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: dimgrey;">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!--Logo for Northwest Labs-->
                <a class="brand" style="padding: 0" href="@Url.Action("Index", "Home")">
                    <img src="~/Content/images/NW_logo.png" style="height: 60px; filter: brightness(0) invert(1); position: relative; margin: 1px" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="color: white">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "Index", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Index", "Home")</li>
                    <li>@Html.ActionLink("Tests", "Tests", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <footer class="footer-distributed">
            <div class="footer-left">
                <img src="~/Content/images/NW_logo.png" style="height: 60px; filter: brightness(0) invert(1); position: relative; margin: 1px" />
                <p class="footer-links">
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    ·
                    <a href="@Url.Action("About", "Home")">About</a>
                    ·
                    <a href="@Url.Action("Contact", "Home")">Contact</a>
                    ·
                    <a href="@Url.Action("Login", "Account")">Log in</a>
                    ·
                    <a href="@Url.Action("Register", "Account")">Register</a>
                </p>
            </div>
            <div class="footer-center">
                <div>
                    <i class="fa fa-map-marker"></i>
                    <p><span>21 Revolution Street</span> Seattle, Washington</p>
                </div>
                <div>
                    <i class="fa fa-phone"></i>
                    <p>+1 555 1234567</p>
                </div>
                <div>
                    <i class="fa fa-envelope"></i>
                    <p><a href="#">support@northwestlabs.com</a></p>
                </div>
            </div>
            <div class="footer-right">
                <p class="footer-company-about">
                    <span>About the company</span>
                    Northwest Labs is a global force in the pharmaceutical industry. We try to advance human health through facilitating revolutionary discoveries in the medicinal field!
                </p>
                <div class="footer-icons">
                    <a href="#"><i class="fa fa-facebook"></i></a>
                    <a href="#"><i class="fa fa-twitter"></i></a>
                    <a href="#"><i class="fa fa-linkedin"></i></a>
                    <a href="#"><i class="fa fa-github"></i></a>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
