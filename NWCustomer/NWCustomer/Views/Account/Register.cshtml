@model NWCustomer.Models.PotentialsViewModel
@{
    ViewBag.Title = "Register";
}

<div class="login-bg">
    <div class="login-card">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <img src="~/Content/images/NW_logo.png" style="height: 70px; display: block; margin: auto" />
            <hr /> <br />
            <p class="col-lg-offset-1">We're excited to have you join the Northwest family of services! Leave your information below and a representative will contact you shortly.</p>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-11">
                    @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", @placeholder = "Company Name" })
                    @Html.ValidationMessageFor(m => m.CompanyName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-11">
                    @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control", @placeholder = "Name of Contact" })
                    @Html.ValidationMessageFor(m => m.ContactName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-11">
                    @Html.TextBoxFor(m => m.ContactEmail, new { @class = "form-control", @placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.ContactEmail, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-11">
                    @Html.TextBoxFor(m => m.ContactPhone, new { @class = "form-control", @placeholder = "Phone" })
                    @Html.ValidationMessageFor(m => m.ContactPhone, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-11">
                    @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", @cols = 50, @rows = 10, @placeholder = "Additional Comments" } )
                    @Html.ValidationMessageFor(m => m.Notes, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-11">
                    <input type="submit" class="login login-submit" value="Request"/>
                </div>
            </div>
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
